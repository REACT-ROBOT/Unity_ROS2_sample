    <joint name="${prefix}horizontal_tail_joint" type="fixed">
      <parent link="${prefix}fuselage_link"/>
      <child link="${prefix}horizontal_tail_link"/>
      <!-- 後方に移動してテールモーメントアームを増加 -->
      <origin xyz="-0.7 0 0.05" rpy="0 0 0"/>
    </joint>
    <link name="${prefix}horizontal_tail_link">
      <inertial>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <!-- 水平尾翼: 0.35m(前後) × 1.4m(左右) × 0.02m(厚さ), m=0.15kg -->
        <!-- Ixx=0.0245, Iyy=0.0015, Izz=0.027 -->
        <mass value="0.15"/>
        <inertia ixx="0.0245" ixy="0.0" ixz="0.0" iyy="0.0015" iyz="0.0" izz="0.027"/>
      </inertial>
      <visual>
        <geometry>
          <!-- URDF座標系: X=前後(chord), Y=左右(span), Z=上下(thickness) -->
          <box size="0.35 1.4 0.02" />
        </geometry>
        <material name="gray"/>
      </visual>
      <collision>
        <aerodynamic_surface>
          <chord>0.35</chord>
          <span>1.4</span>
          <lift_slope>5.8</lift_slope>
          <zero_lift_aoa>-2</zero_lift_aoa>
          <stall_angle_high>20</stall_angle_high>
          <stall_angle_low>-20</stall_angle_low>
          <skin_friction>0.015</skin_friction>
          <skin_friction_air>0.015</skin_friction_air>
          <skin_friction_water>0.0075</skin_friction_water>
          <flap_fraction>0.25</flap_fraction>
          <control_surface type="pitch" multiplier="0.1"/>

          <blade_element_theory>
            <num_elements>8</num_elements>
            <induced_velocity_model>none</induced_velocity_model>
            <taper_ratio>1.0</taper_ratio>
            <twist_root>0</twist_root>
            <twist_tip>0</twist_tip>
          </blade_element_theory>
        </aerodynamic_surface>
        <geometry>
          <box size="0.35 1.4 0.02" />
        </geometry>
      </collision>
    </link>

    <joint name="${prefix}vertical_tail_joint" type="fixed">
      <parent link="${prefix}fuselage_link"/>
      <child link="${prefix}vertical_tail_link"/>
      <!-- 後方に移動してヨー安定性を向上 -->
      <origin xyz="-0.7 0 0.2" rpy="1.5708 0 0"/>
    </joint>
    <link name="${prefix}vertical_tail_link">
      <inertial>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <!-- 垂直尾翼: 0.25m(前後) × 0.02m(厚さ) × 0.35m(高さ), m=0.08kg -->
        <!-- Ixx=0.00082, Iyy=0.0012, Izz=0.00042 -->
        <mass value="0.08"/>
        <inertia ixx="0.00082" ixy="0.0" ixz="0.0" iyy="0.00042" iyz="0.0" izz="0.0012"/>
      </inertial>
      <visual>
        <!-- visualは回転なし（見た目は元のまま） -->
        <geometry>
          <!-- URDF座標系: X=前後(chord), Y=厚さ(thickness), Z=高さ(span) -->
          <!-- 垂直尾翼は元々Z方向にスパンがある形状 -->
          <box size="0.35 0.25 0.02" />
        </geometry>
        <material name="gray"/>
      </visual>
      <collision>
        <aerodynamic_surface>
          <chord>0.25</chord>
          <span>0.35</span>
          <lift_slope>5.2</lift_slope>
          <zero_lift_aoa>0</zero_lift_aoa>
          <stall_angle_high>20</stall_angle_high>
          <stall_angle_low>-20</stall_angle_low>
          <skin_friction>0.015</skin_friction>
          <skin_friction_air>0.015</skin_friction_air>
          <skin_friction_water>0.0075</skin_friction_water>
          <flap_fraction>0.25</flap_fraction>
          <control_surface type="yaw" multiplier="0.5"/>

          <blade_element_theory>
            <num_elements>8</num_elements>
            <induced_velocity_model>none</induced_velocity_model>
            <taper_ratio>1.0</taper_ratio>
            <twist_root>0</twist_root>
            <twist_tip>0</twist_tip>
          </blade_element_theory>
        </aerodynamic_surface>
        <geometry>
          <box size="0.35 0.25 0.02" />
        </geometry>
      </collision>
    </link>

    <xacro:wheel_macro parent="${prefix}fuselage_link" wheel_name="left_wheel" xyz="0.2 0.2 -0.1"/>
    <xacro:wheel_macro parent="${prefix}fuselage_link" wheel_name="right_wheel" xyz="0.2 -0.2 -0.1"/>

  </xacro:macro>
</robot>
