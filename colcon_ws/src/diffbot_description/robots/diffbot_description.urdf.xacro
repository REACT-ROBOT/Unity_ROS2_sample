<?xml version="1.0"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro">

  <xacro:macro name="diffbot" params="prefix use_sim:=^|false">

  <material name="gray">
    <color rgba="0.5 0.5 0.5 0.2"/>
  </material>
  <material name="ball">
    <color rgba="0.5 0.5 0.5 0.2"/>
  </material>
  <material name="white">
    <color rgba="1.0 1.0 1.0 1.0"/>
  </material>

  <collision_material name="wheel">
    <friction static="1.0" dynamic="1.0"/>
    <contact_offset value="0.02"/>
  </collision_material>
  <collision_material name="ball">
    <friction static="0.0" dynamic="0.0"/>
  </collision_material>

  <!-- buoyancy_material の定義（robot直下） -->
  <buoyancy_material name="light_material">
    <density value="0.5"/>  <!-- 水より軽い -->
  </buoyancy_material>
  
  <buoyancy_material name="heavy_material">
    <density value="2.0"/>  <!-- 水より重い -->
  </buoyancy_material>

  <!-- ロボット全体のデフォルト水力学パラメータ（オプション） -->
  <hydrodynamics>
    <water_density>1027</water_density>
    <velocity_reference>1.0</velocity_reference>
    <pressure_drag>
      <C_PD1>10</C_PD1>
      <C_PD2>10</C_PD2>
      <f_P>0.5</f_P>
    </pressure_drag>
    <suction_drag>
      <C_SD1>10</C_SD1>
      <C_SD2>10</C_SD2>
      <f_S>0.5</f_S>
    </suction_drag>
    <slamming>
      <power>2</power>
      <max_acceleration>10</max_acceleration>
      <multiplier>1</multiplier>
    </slamming>
  </hydrodynamics>

  <xacro:macro name="wheel_macro" params="parent prefix xyz">
    <joint name="${prefix}_joint" type="continuous">
      <axis xyz="0 0 1" />
      <parent link="${parent}"/>
      <child  link="${prefix}_link"/>
      <origin xyz="${xyz}" rpy="${radians(-90)} 0 0"/>
      <drive stiffness="0.0" damping="30000.0"/>
      <limit effort="100.0" velocity="100.0"/>
    </joint>
    <link name="${prefix}_link">
      <inertial>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <mass value="0.1"/>
        <inertia ixx="0.0001" ixy="0.0" ixz="0.0" iyy="0.0001" iyz="0.0" izz="0.0001"/>
      </inertial>
      <visual>
        <geometry>
          <cylinder radius="0.05" length="0.02" />
        </geometry>
        <material name="gray"/>
      </visual>
      <collision>
        <buoyancy_material name="light_material"/>
        <geometry>
          <cylinder radius="0.05" length="0.02" />
        </geometry>
        <collision_material name="wheel"/>
      </collision>
    </link>
  </xacro:macro> 

  <link name="base_link">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.01"/>
      <inertia ixx="0.0001" ixy="0.0" ixz="0.0" iyy="0.0001" iyz="0.0" izz="0.0001"/>
    </inertial>
  </link>

  <joint name="body_joint" type="fixed">
    <parent link="base_link"/>
    <child  link="body_link"/>
    <origin xyz="-0.07 0 0.07" rpy="0 0 0"/>
  </joint>
  <link name="body_link">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="1.0"/>
      <inertia ixx="0.001" ixy="0.0" ixz="0.0" iyy="0.001" iyz="0.0" izz="0.001"/>
    </inertial>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <box size="0.24 0.18 0.06" />
      </geometry>
      <material name="gray" />
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <buoyancy_material name="light_material"/>
      <!-- 水力学パラメータ（リンク固有値を設定）-->
      <hydrodynamics>
        <pressure_drag>
          <C_PD1>15</C_PD1>
          <C_PD2>20</C_PD2>
          <f_P>0.5</f_P>
        </pressure_drag>
      </hydrodynamics>
      <geometry>
        <box size="0.24 0.178 0.06" />
      </geometry>
    </collision>
  </link>

  <xacro:wheel_macro prefix="left_wheel"  parent="body_link" xyz="0.07 0.1 -0.02"/>
  <xacro:wheel_macro prefix="right_wheel" parent="body_link" xyz="0.07 -0.1 -0.02"/>

  <joint name="ball_joint" type="fixed">
    <parent link="body_link"/>
    <child  link="ball_link"/>
    <origin xyz="-0.07 0 -0.05" rpy="0 0 0"/>
  </joint>
  <link name="ball_link">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <sphere radius="0.02" />
      </geometry>
      <material name="ball" />
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <buoyancy_material name="light_material"/>
      <geometry>
        <sphere radius="0.02" />
      </geometry>
      <collision_material name="ball"/>
    </collision>
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.1"/>
      <inertia ixx="0.0001" ixy="0.0" ixz="0.0" iyy="0.0001" iyz="0.0" izz="0.0001"/>
    </inertial>
  </link>
  
  <joint name="lidar_joint" type="fixed">
    <parent link="body_link"/>
    <child  link="lidar_link"/>
    <origin xyz="0 0 0.2" rpy="0 0 0"/>
  </joint>
  <link name="lidar_link">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.1"/>
      <inertia ixx="0.0001" ixy="0.0" ixz="0.0" iyy="0.0001" iyz="0.0" izz="0.0001"/>
    </inertial>
    <!-- If visual tag is enable, lidar's ray is blocked. -->
    <!--
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <cylinder radius="0.03" length="0.08" />
      </geometry>
      <material name="white" />
    </visual>
    -->
  </link>

  <joint name="camera_joint" type="fixed">
    <parent link="body_link"/>
    <child  link="camera_link"/>
    <origin xyz="0.05 -0.1 0.1" rpy="0 0 0"/>
  </joint>
  <link name="camera_link">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.1"/>
      <inertia ixx="0.0001" ixy="0.0" ixz="0.0" iyy="0.0001" iyz="0.0" izz="0.0001"/>
    </inertial>
    <!-- If visual tag is enable, camera's view is blocked. -->
    <!--
    <visual>
      <origin xyz="0 0 0" rpy="0 -1.57 0" />
      <geometry>
        <cylinder radius="0.01" length="0.01" />
      </geometry>
      <material name="white" />
    </visual>
    -->
  </link>

  <joint name="depth_camera_joint" type="fixed">
    <parent link="body_link"/>
    <child  link="depth_camera_link"/>
    <origin xyz="0.05 0.1 0.1" rpy="0 0 0"/>
  </joint>
  <link name="depth_camera_link">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.1"/>
      <inertia ixx="0.0001" ixy="0.0" ixz="0.0" iyy="0.0001" iyz="0.0" izz="0.0001"/>
    </inertial>
    <!-- If visual tag is enable, camera's view is blocked. -->
    <!--
    <visual>
      <origin xyz="0 0 0" rpy="0 -1.57 0" />
      <geometry>
        <cylinder radius="0.01" length="0.01" />
      </geometry>
      <material name="white" />
    </visual>
    -->
  </link>

  </xacro:macro>
</robot>
